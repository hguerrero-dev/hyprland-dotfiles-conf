if [[ -z $DISPLAY ]] && [[ $(tty) = /dev/tty1 ]]; then
    # OPTIMIZACIÓN: Detectar si estamos en VirtualBox
    if hostnamectl | grep -q "virtualbox"; then
        export WLR_RENDERER=pixman
    fi

    # Elegir qué escritorio arrancar (puedes cambiar 'sway' por 'Hyprland' en el futuro)
    exec sway
fi